<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

    <hibernate-mapping>
    	<class name="com.hc.bean.Customer" table="cst_customer">
    			<id name="cust_id" column="cust_id">
    				<generator class="native"/>
    			</id>
    		
    		<property name="cust_name" column="cust_name"/>
    		<property name="cust_user_id" column="cust_user_id"/>
    		<property name="cust_create_id" column="cust_create_id"/>
    		<property name="cust_phone" column="cust_phone"/>
    		<property name="cust_mobile" column="cust_mobile"/>
    		<property name="filePath" column="filePath"/>
    		<property name="cust_linkman" column="cust_linkman"/>
    		
    		<many-to-one name="source" class="com.hc.bean.Base_Dict" column="cust_source"/>
    		<many-to-one name="industry" class="com.hc.bean.Base_Dict" column="cust_industry"/>
    		<many-to-one name="level" class="com.hc.bean.Base_Dict" column="cust_level"/>
	    			
	    			
			<!-- 配置联系人映射 -->
			<set name="linkMan" cascade="delete">
				<key column="lkm_cust_id"></key>		
				<one-to-many class="com.hc.bean.LinkMan"/>
			</set>
			<!-- 
				拜访记录
			 -->
			<set name="visit" cascade="delete">
				<key column="visit_cust_id"></key>
				<one-to-many class="com.hc.bean.Visit"/>
			</set>
		
    	</class>
    </hibernate-mapping>
    